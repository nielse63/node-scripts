{
  "name": "node-scripts",
  "version": "0.0.0",
  "description": "Collection of useful node scripts and utilities",
  "scripts": {
    "postinstall": "lerna bootstrap && lerna link",
    "test": "jest --cache --coverage",
    "lint": "eslint --fix . && prettier --write .",
    "start": "node index.js",
    "prerelease": "npm run build",
    "release": "lerna publish",
    "prepare": "husky install",
    "build": "lerna exec --parallel 'BABEL_ENV=build babel src --out-dir dist --root-mode upward --delete-dir-on-start --no-comments'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/node-scripts.git"
  },
  "keywords": [
    "node",
    "template",
    "github-template"
  ],
  "author": {
    "name": "Erik Nielsen",
    "email": "erik@312development.com"
  },
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/nielse63/node-scripts/issues"
  },
  "homepage": "https://github.com/nielse63/node-scripts#readme",
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-jest": "^27.2.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.5.2",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "jest-extended": "^0.11.5",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.0",
    "lodash": "^4.17.21",
    "prettier": "^2.4.1",
    "signale": "^1.4.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,html}": [
      "prettier --write"
    ]
  }
}
