{
  "name": "node-scripts",
  "version": "0.0.0",
  "description": "Collection of useful node scripts and utilities",
  "scripts": {
    "postinstall": "lerna bootstrap && lerna link",
    "test": "jest --cache --coverage",
    "lint": "eslint --fix --cache . && prettier --write .",
    "release": ".bin/release",
    "prepare": "husky install",
    "build": "lerna exec --parallel 'npm run build --if-present'",
    "postbuild": "lerna exec --parallel 'npm run build:types --if-present'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/node-scripts.git"
  },
  "keywords": [
    "node",
    "template",
    "github-template"
  ],
  "author": {
    "name": "Erik Nielsen",
    "email": "erik@312development.com"
  },
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/nielse63/node-scripts/issues"
  },
  "homepage": "https://github.com/nielse63/node-scripts#readme",
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "devDependencies": {
    "@babel/cli": "7.16.0",
    "@babel/core": "7.16.0",
    "@babel/preset-env": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@tsconfig/node12": "1.0.9",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.7",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "babel-jest": "27.3.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-jest": "25.2.4",
    "fs-extra": "10.0.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "jest-extended": "0.11.5",
    "lerna": "4.0.0",
    "lint-staged": "12.0.2",
    "lodash": "4.17.21",
    "prettier": "2.4.1",
    "signale": "1.4.0",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,html}": [
      "prettier --write"
    ]
  }
}
