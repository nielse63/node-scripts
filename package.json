{
  "name": "node-scripts",
  "version": "0.0.3",
  "description": "Collection of useful node scripts and utilities",
  "scripts": {
    "postinstall": "lerna bootstrap && lerna link",
    "test": "jest --cache --coverage",
    "lint": "eslint --fix --cache . && prettier --write .",
    "release": ".bin/release",
    "prepare": "husky install",
    "build": "lerna exec --parallel 'npm run build --if-present'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nielse63/node-scripts.git"
  },
  "keywords": [
    "node",
    "template",
    "github-template"
  ],
  "author": {
    "name": "Erik Nielsen",
    "email": "erik@312development.com"
  },
  "license": "Apache License 2.0",
  "bugs": {
    "url": "https://github.com/nielse63/node-scripts/issues"
  },
  "homepage": "https://github.com/nielse63/node-scripts#readme",
  "engines": {
    "node": ">=14",
    "npm": ">=6"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^18.0.0",
    "@types/signale": "^1.4.2",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^26.1.2",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "husky": "^8.0.1",
    "jest": "^28.0.0",
    "jest-extended": "^3.0.0",
    "lerna": "^5.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.5.1",
    "signale": "^1.4.0",
    "typescript": "^4.5.3"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,html}": [
      "prettier --write"
    ]
  }
}
