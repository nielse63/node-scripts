#!/usr/bin/env bash
set -e

root="$(dirname "$(dirname "$0")")"
cd "$root"

echo "lerna clean --yes"
npx lerna clean --yes || :
echo "rm -rf node_modules"
if [ -d "$HOME/.Trash" ]; then
  mv "$root/node_modules" "$HOME/.Trash/node_modules"
fi
rm -rf "$root/node_modules"
items=$(find "$root/packages" \( -name dist \))

for item in $items
do
  echo "rm -rf $item"
  rm -rf "$item"
done
